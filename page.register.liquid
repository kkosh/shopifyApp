<!-- /templates/page.liquid -->

<!-- page : global liquid object -->
<!-- title : its attribute -->
<!-- return title of the page -->

<h1>{{ page.title }}</h1>

<div>
<!-- 
<!--   Returns the content of a page. -->
  {{ page.content }}
  
   
<!--   Form types -->
<!--   activate_customer_password, new_comment, contact, customer, create_customer,  -->
<!--   customer_address, customer_login,   activate_customer_password, new_comment, contact,  -->
<!--   customer_address, recover_customer_password,  -->
<!--   reset_customer_password, storefront_password -->

  
  
<!--   starting of form in liquid -->
 {% form 'customer_login' %}

  
<!--  control flow tag : if for submitted successfully then 'thank you' else error '' -->
  
  {% if form.posted_successfully? %}
    <div>
      Thank you
    </div>
  {% else %}
  
<!--   form.errors: returns array of string if form is not submitted successfully -->
<!--   default_errors: return default error message -->
<!--   [email : 'please enter valid email'] -->
  
  {{ form.errors | default_errors }}
  {% endif %}

  <div>
    <p>
      
      
<!--        customer: global liquid object, you can access it in all layout, template and snippet files.
	   register: form object
	   first_name: its attribute -->
      
<!--     t: translation filter:  that let store builder modify or create translations of their storefronts. -->   
     
      <label> {{ 'customer.register.first_name' | t }} : </label>
      
<!--   lookout for form name and this first_name attribute     -->
      <input type="text" id="fname" name="customer[first_name]" placeholder = {{ 'customer.register.first_name' | t }} >
    </p>
    
    
    <p>
      <label> {{ 'customer.register.last_name' | t }} : </label>
      <input type="text" id="lname" name="customer[last_name]" placeholder = {{ 'customer.register.last_name' | t }}>
    </p>
    
    
    <p>
      <label> {{ 'customer.register.email' | t }} : </label>
      <input type="email" id="email" name="customer[email]" placeholder = {{ 'customer.register.email' | t }}>
    </p>
    
        
    <p>      
<!--       <label> {{ 'customer_address.register.phone' | t}} : </label> -->
      <label> Phone : </label>
      <input type="number" id="phone" name="customer[phone]" placeholder = 'Phone'>
    </p>
   
        
    <p>
      <input type="submit" required id="submit" value="{{ 'customer.register.submit' | t }}" />
    </p>
  </div>

  {% endform %}

  <style>
  
    #fname  { margin-left: 23px; }
    #lname { margin-left: 26px; }
    #email { margin-left: 61px; }
    #phone{ margin-left: 56px; }
    #submit { margin-left: 114px; }
 
  </style>
  
</div>
